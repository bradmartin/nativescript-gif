{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": false,
    "noLib": false,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
    }
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "demo/node_modules", "platforms"]
}
